\addplot[domain=-2.1:2.1]{4-x^2}node[pos=0.75,fill=white]{$y=4-x^2$};
\draw[shorten <=-3cm, shorten >=-0.5cm](axis cs:-1,3)--(axis cs:0,5)node[pos=0.7,left]{$y=2x+5$};
\draw(axis cs:-1,3)node[circ]{}node[left]{$(-1,3)$};
\end{axis}
\end{tikzpicture}
