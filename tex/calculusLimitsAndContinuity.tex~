\addplot[domain=-1.25:2.26,samples=50]{x*(x+1)*(x-2)};
\addplot[mark=*] plot coordinates  {(0.5,-1.125)}node[right]{$N_1$};
\addplot[mark=*] plot coordinates  {(2,0)}node[above left]{$N_2$};
\end{axis}
\end{tikzpicture}
