\draw(aaa)--(bbb)coordinate[pos=0.5](aaaa)--(ccc)coordinate[pos=0.5](bbbb)--(ddd)coordinate[pos=0.5](cccc)--(aaa)coordinate[pos=0.5](dddd);
\end{tikzpicture}
