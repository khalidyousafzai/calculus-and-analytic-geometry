\draw(axis cs:{f(1.6)},1.6)--(axis cs:{g(1.6)},1.6);
\addplot[name path=funf,domain=1.5:1.6,draw=none]({f(x)},{\x});
\addplot[name path=fung,domain=1.5:1.6,draw=none]({g(x)},{\x});
\addplot[fill=lgray]fill between [of = funf and fung];
\end{axis}
