\draw(0,0)--(3,0)coordinate[pos=0.5](a)--(1,1.5)coordinate[pos=0.5](b)--(0,0)coordinate[pos=0.5](c);
\draw[dashed](0,0)--(b)node[pos=0.6667,circ]{}coordinate[pos=0.667](k);
\draw[dashed](3,0)--(c);
\draw[dashed](1,1.5)--(a);
