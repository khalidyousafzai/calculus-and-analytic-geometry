\pgfmathsetmacro{\w}{0.2}
\pgfmathsetmacro{\ra}{f(\c)+\w}
\pgfmathsetmacro{\rb}{f(\c)-\w}
\pgfmathsetmacro{\xx}{(\w+f(\c))^2}
