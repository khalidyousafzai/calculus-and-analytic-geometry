\pgfmathsetmacro{\c}{1/3*(\b-\a)}
\pgfmathsetmacro{\d}{2/3*(\b-\a)}
\pgfmathsetmacro{\len}{\d-\c}
\pgfmathsetmacro{\ra}{f(\a)}
\pgfmathsetmacro{\rb}{f(\b)}
\pgfmathsetmacro{\rc}{f(\c)}
\pgfmathsetmacro{\rd}{f(\d)}
%\draw[gray]plot[domain=0:0.75]({\x},{f(\x)});
