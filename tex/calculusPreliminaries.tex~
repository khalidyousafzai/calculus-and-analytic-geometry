\draw(0,0)--++(60:1.2);
\draw[thick] ([shift={(10:1)}]0,0) arc (10:60:1);
\draw[] ([shift={(10:0.3)}]0,0) arc (10:60:0.3);
\draw(0,0)++(35:0.5)node[]{$\theta$};
\draw(0,0)++(35:1.2)node[]{$\theta$};
\end{tikzpicture}
