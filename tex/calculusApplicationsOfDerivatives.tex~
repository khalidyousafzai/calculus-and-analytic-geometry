\draw(-0.5,0.4)node[]{$-$};
\draw(0.5,0.4)node[]{$-$};
\draw(1.5,0.4)node[]{$+$};
%
%
\draw(-1,-1.6)node[left]{\RL{انتہا کی قسم}};
\draw[dashed](0,-0.5)--++(0,-0.8)node[below,align=center]{انتہا\\ نہیں};
\draw[dashed](1,-0.5)--++(0,-0.8)node[below,align=center]{مقامی\\ \RL{کم سے کم}};
