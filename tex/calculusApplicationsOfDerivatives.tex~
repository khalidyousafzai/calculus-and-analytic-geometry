\addplot[domain=-3.142:4.713,smooth]{2*cos(deg(x))-sqrt(2)*x}node[pos=0.65,below left,fill=white]{$y=2\cos x-\sqrt{2}x$};
\end{axis}
\end{tikzpicture}
