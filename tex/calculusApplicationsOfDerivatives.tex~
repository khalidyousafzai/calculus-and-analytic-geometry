\addplot[domain=-\a+0.2:-0.2,smooth]{sec(deg(x))+1/x};
\addplot[domain=0.2:\a-0.2,smooth]{sec(deg(x))+1/x}node[above]{$y=\sec x+\tfrac{1}{x}$};
