\addplot[domain=-0.5:4]{x^2-4*x+3}node[left,font=\tiny]{$y=x^2-4x+3$};
\draw(axis cs:2,-1)node[circ]{}node[below,align=center]{$(2,-1)$\\  \RL{مقامی کم سے کم}};
\end{axis}
