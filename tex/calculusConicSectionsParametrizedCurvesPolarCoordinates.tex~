\addplot[]plot coordinates {(-2,0)}node[circ]{}node[below]{$(-2,0)$};
\addplot[]plot coordinates {(2,0)}node[circ]{}node[below]{$(2,0)$};
\addplot[]plot coordinates {(0,-2)}node[circ]{}node[right]{$(-2,\tfrac{\pi}{2})$};
\addplot[]plot coordinates {(0,2)}node[circ]{}node[right]{$(2,\tfrac{\pi}{2})$};
\end{axis}
