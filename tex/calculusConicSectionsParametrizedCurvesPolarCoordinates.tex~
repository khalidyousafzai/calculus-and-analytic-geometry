\addplot[domain=0.2:4]{-f(x)};
\addplot[]plot coordinates {(-3,-7)(-3,7)}node[pos=0.85,right]{$x=-3$};
\addplot[]plot coordinates {(3,0)}node[circ]{}node[below]{$F(3,0)$};
\end{axis}
\end{tikzpicture}
\caption{}
\label{شکل_سوال_مخروط_قطع_مکافی_دیا_الف}
\end{minipage}\hfill
