\addplot[domain=-3:3]{f(x)}node[pos=0.25,below,yshift=-0.5ex]{$x^2=-8y$};
\addplot[]plot coordinates {(-3,2)(3,2)}node[pos=0.85,below]{$y=2$};
\addplot[]plot coordinates {(0,-2)}node[circ]{}node[right]{$F(0,-2)$};
\end{axis}
