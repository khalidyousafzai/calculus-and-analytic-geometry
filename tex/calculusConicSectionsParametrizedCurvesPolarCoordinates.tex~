\addplot[domain=0:1/2*pi]{f(x)};
\addplot[domain=pi:3/2*pi]{f(x)};
\addplot[dashed,domain=1/2*pi:pi]{f(x)};
\addplot[dashed,domain=3/2*pi:2*pi]{f(x)};
